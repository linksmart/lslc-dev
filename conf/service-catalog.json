{
  "description": "Standalone Service Catalog",
  "dnssdEnabled": true,
  "bindAddr": "0.0.0.0",
  "bindPort": 8082,
  "apiLocation": "/sc",
  "staticDir": "./static",
  "storage": {
    "type": "memory"
  },
  "gc": {
    "tunnelingService": "http://localhost:8082/NetworkManager"
  },
  "auth": {
    "enabled": true,
    "provider": "auth-provider-name",
    "providerURL": "http://auth-provider-url:port/path",
    "serviceID": "scID",
    "authorization": {
      "rules": [
        {
          "resources": ["/sc"],
          "methods": ["GET"],
          "users": [],
          "groups": ["rousers"]
        },
        {
          "resources": ["/sc"],
          "methods": ["GET","POST","PUT","DELETE"],
          "users": [],
          "groups": ["rwusers"]
        }
      ]
    }
  }
}