{
  "description": "Standalone Device/Resource Catalog",
  "dnssdEnabled": true,
  "publicEndpoint": "http://fqdn-of-the-host:8081",
  "bindAddr": "0.0.0.0",
  "bindPort": 8081,
  "apiLocation": "/rc",
  "staticDir": "./static",
  "storage": {
    "type": "memory",
    "dsn": ""
  },
  "serviceCatalog": [
    {
      "discover": false,
      "endpoint": "http://localhost:8082/sc",
      "ttl": 120,
      "auth": {
        "provider": "auth-provider-name",
        "providerURL": "http://auth-provider-url:port/path",
        "username": "username",
        "password": "password",
        "serviceID": "scID"
      }
    }
  ],
  "auth": {
    "enabled": true,
    "provider": "auth-provider-name",
    "providerURL": "http://auth-provider-url:port/path",
    "serviceID": "rcID",
    "authorization": {
      "rules": [
        {
          "resources": ["/rc"],
          "methods": ["GET","POST", "PUT", "DELETE"],
          "users": [],
          "groups": ["rwusers"]
        }
      ]
    }
  }
}
